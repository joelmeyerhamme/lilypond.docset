  \stemNeutral
   g8[ c c,]
   c16[ c'' a f]
  \stemUp 
   c,,32[ c'' a f]

  %%%%%%%
  \stemNeutral
  \times 2/3{ d16[ fis' d,]} \times 2/3{ cis[ g'' cis,,]}
  a'16 cis a, g''' % Used to give a nice beam directed upwards.
  \stemNeutral

  \transpose c c {
	  \stemDown  e'8[ e e']
      }
}

